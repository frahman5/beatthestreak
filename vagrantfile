# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  #config.vm.box = "hashicorp/precise64"
  config.vm.box = "data-science-toolbox/dst"

  # nginx config
  config.vm.network "forwarded_port", guest: 80, host: 8080
  config.vm.network "forwarded_port", guest: 8001, host: 8000

  # Mongo DB
  config.vm.network "forwarded_port", guest: 27017, host: 27017
  config.vm.network "forwarded_port", guest: 28017, host: 28017

  # Mysql 
  config.vm.network "forwarded_port", guest: 3306, host: 3306

  # Postgresql 
  config.vm.network "forwarded_port", guest: 5432, host: 8432

  # Go services
  config.vm.network "forwarded_port", guest: 3000, host: 3000

  # RabbitMQ 
  config.vm.network "forwarded_port", guest: 5672, host: 5672
  config.vm.network "forwarded_port", guest: 15672, host: 15672

  # Provision
  config.vm.provision :shell, path: "bootstrap.sh"

  #synced folders
  config.vm.synced_folder "beatthestreak", "/home/vagrant/programming/Python/beatthestreak"
end
